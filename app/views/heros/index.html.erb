<p id="notice"><%= notice %></p>

<h1>Heros</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Rasa</th>
      <th>Damage</th>
      <th>Health</th>
      <th>Mana</th>
      <th>Power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= image_tag hero.avatar.url(:original), :height => "100px"  %></td>
        <td><%= hero.name %></td>
        <td><%= hero.rasa %></td>
        <td><%= hero.damage %></td>
        <td><%= hero.health %></td>
        <td><%= hero.mana %></td>
        <td><%= hero.power %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

